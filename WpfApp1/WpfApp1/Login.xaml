<Window x:Class="WpfApp1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login" Height="401" Width="748" ResizeMode="NoResize" Background="#FF8B8B8B">
    <Grid>
        <Button Content="Login" HorizontalAlignment="Left" Height="40" Margin="293,248,0,0" VerticalAlignment="Top" Width="127" Background="#FFDE8888" Click="Button_Click"/>
        <Label Content="Username:" HorizontalAlignment="Left" Height="24" Margin="138,108,0,0" VerticalAlignment="Top" Width="92"/>
        <TextBox Name="txtUsername" HorizontalAlignment="Left" Height="24" Margin="235,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="293"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="138,137,0,0" VerticalAlignment="Top" Width="92"/>
        <PasswordBox Name="txtPassword" HorizontalAlignment="Left" Height="26" Margin="235,137,0,0" VerticalAlignment="Top" Width="293"/>

    </Grid>
</Window>
